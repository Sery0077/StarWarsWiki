<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_people">

    <fragment
        android:id="@+id/nav_people"
        android:name="dev.bonch.starwarswiki.fragments.PeopleFragment"
        android:label="PeopleFragment"
        tools:layout="@layout/people_fragment">
        <action
            android:id="@+id/action_nav_people_to_nav_view_item_fragment"
            app:destination="@id/nav_view_item_fragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_film"
        android:name="dev.bonch.starwarswiki.fragments.FilmFragment"
        android:label="FilmFragment"
        tools:layout="@layout/film_fragment" >
        <action
            android:id="@+id/action_nav_film_to_nav_view_item_fragment"
            app:destination="@id/nav_view_item_fragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_view_item_fragment"
        android:name="dev.bonch.starwarswiki.fragments.ViewItemFragment"/>
</navigation>